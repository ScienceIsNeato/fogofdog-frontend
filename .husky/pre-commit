#!/usr/bin/env sh
# Load environment variables for git hooks
# Try to source environment from common locations
if [ -f .envrc ]; then
  # Use direnv if available
  if command -v direnv >/dev/null 2>&1; then
    eval "$(direnv export sh)"
  else
    # Source .envrc manually if direnv not available
    set -a
    . ./.envrc
    set +a
  fi
elif [ -f .env ]; then
  # Load from .env file if it exists
  set -a
  . ./.env
  set +a
fi

# slop-mop quality gate (replaces ship_it.py)
# Installs slop-mop if not already on PATH, then runs lint-format and type validation.
# Note: we invoke --quality-gates explicitly rather than the "commit" alias
# because the alias is hardcoded in slop-mop to include security:local which
# requires detect-secrets and does not respect security.enabled in the config.
# Commit is blocked if any gate fails.
if ! command -v sm >/dev/null 2>&1; then
  pip3 install -e ./slop-mop --break-system-packages --quiet 2>/dev/null || \
  pip install -e ./slop-mop --break-system-packages --quiet 2>/dev/null
fi

sm validate --quality-gates javascript:lint-format javascript:types
