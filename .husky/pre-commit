#!/usr/bin/env sh
# Load environment variables for git hooks
# Try to source environment from common locations
if [ -f .envrc ]; then
  # Use direnv if available
  if command -v direnv >/dev/null 2>&1; then
    eval "$(direnv export sh)"
  else
    # Source .envrc manually if direnv not available
    set -a
    . ./.envrc
    set +a
  fi
elif [ -f .env ]; then
  # Load from .env file if it exists
  set -a
  . ./.env
  set +a
fi

# slop-mop quality gate
# Installs slop-mop if not already on PATH, then runs explicit JS/quality/security gates.
# Commit is blocked if any gate fails.
#
# NOTE: The default 'sm validate commit' profile only includes Python gates,
# which is wrong for this JS/TS project. Using explicit gates until
# slop-mop supports per-project profile overrides via .sb_config.json.
# See: slop-mop/slopmop/checks/__init__.py (commit alias definition)
if ! command -v sm >/dev/null 2>&1; then
  pip3 install -e ./slop-mop --break-system-packages --quiet 2>/dev/null || \
  pip install -e ./slop-mop --break-system-packages --quiet 2>/dev/null
fi

sm validate -g javascript:lint-format,javascript:tests,javascript:types,javascript:coverage,quality:complexity,quality:duplication,security:local
