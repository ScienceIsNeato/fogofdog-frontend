#!/usr/bin/env sh
# Load environment variables for git hooks
# Try to source environment from common locations
if [ -f .envrc ]; then
  # Use direnv if available
  if command -v direnv >/dev/null 2>&1; then
    eval "$(direnv export sh)"
  else
    # Source .envrc manually if direnv not available
    set -a
    . ./.envrc
    set +a
  fi
elif [ -f .env ]; then
  # Load from .env file if it exists
  set -a
  . ./.env
  set +a
fi

# Use the parallelized ship_it.py for faster, fail-fast quality checks
# This matches the npm run pre-commit:strict command
python3 scripts/ship_it.py --fail-fast
