{
  "version": "1.0",
  "default_profile": "javascript",
  "profiles": {
    "commit": [
      "javascript:lint-format",
      "javascript:types",
      "javascript:tests",
      "javascript:coverage",
      "general:deploy-tests"
    ],
    "pr": [
      "javascript:lint-format",
      "javascript:types",
      "javascript:tests",
      "javascript:coverage",
      "quality:duplication",
      "general:deploy-tests"
    ]
  },
  "python": {
    "enabled": true,
    "include_dirs": ["scripts"],
    "exclude_dirs": [],
    "gates": {
      "lint-format": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "line_length": 88
      },
      "tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_dirs": ["tests"],
        "timeout": 300
      },
      "coverage": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "threshold": 80
      },
      "diff-coverage": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null
      },
      "new-code-coverage": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null
      },
      "static-analysis": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null
      },
      "type-checking": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null
      }
    }
  },
  "javascript": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "lint-format": {
        "enabled": true,
        "auto_fix": true,
        "config_file_path": null
      },
      "tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_command": "npx jest --passWithNoTests --forceExit --no-coverage"
      },
      "coverage": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "threshold": 78
      },
      "frontend": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "frontend_dirs": []
      },
      "bogus-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "max_allowed": 0,
        "exclude_dirs": ["slop-mop", "cursor-rules", "node_modules", "__mocks__"]
      }
    }
  },
  "security": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "full": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": ".secrets.baseline",
        "scanners": ["bandit", "semgrep", "detect-secrets"],
        "exclude_dirs": [
          "venv",
          ".venv",
          "node_modules",
          "cursor-rules",
          "archives",
          "logs",
          "tests",
          "*/.venv",
          "*/venv"
        ]
      },
      "local": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": ".secrets.baseline",
        "scanners": ["bandit", "semgrep", "detect-secrets"],
        "exclude_dirs": [
          "venv",
          ".venv",
          "node_modules",
          "cursor-rules",
          "archives",
          "logs",
          "tests",
          "*/.venv",
          "*/venv"
        ]
      }
    }
  },
  "quality": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [
      "coverage",
      "ios",
      "android",
      "node_modules",
      ".git",
      "slop-mop",
      "test_artifacts"
    ],
    "gates": {
      "complexity": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "max_rank": "C",
        "max_complexity": 15,
        "src_dirs": []
      },
      "duplication": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "threshold": 5,
        "include_dirs": ["src"],
        "min_tokens": 50,
        "min_lines": 5
      }
    }
  },
  "general": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "templates": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "templates_dir": null
      },
      "deploy-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_script": "scripts/__tests__/deploy_app.test.sh"
      }
    }
  },
  "integration": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "smoke-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_dir": "tests/smoke"
      },
      "integration-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_dir": "tests/integration"
      },
      "e2e-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_dir": "tests/e2e",
        "test_command": null
      }
    }
  },
  "pr": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "comments": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "fail_on_unresolved": true
      }
    }
  },
  "disabled_gates": []
}
