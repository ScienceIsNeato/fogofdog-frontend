{
  "version": "1.0",
  "default_profile": "commit",
  "python": {
    "enabled": true,
    "include_dirs": ["scripts"],
    "exclude_dirs": [],
    "gates": {
      "lint-format": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "line_length": 88
      },
      "tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_dirs": ["scripts/__tests__"],
        "timeout": 300
      },
      "coverage": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null,
        "threshold": 80
      },
      "diff-coverage": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null
      },
      "static-analysis": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null
      },
      "type-checking": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null
      }
    }
  },
  "javascript": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": ["slop-mop", "cursor-rules"],
    "gates": {
      "lint-format": {
        "enabled": true,
        "auto_fix": true,
        "config_file_path": null,
        "npm_install_flags": ["--legacy-peer-deps"]
      },
      "types": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null
      },
      "tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_command": "npx jest --passWithNoTests --forceExit --no-coverage"
      },
      "coverage": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "threshold": 78
      },
      "frontend": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "frontend_dirs": []
      },
      "bogus-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "max_allowed": 0,
        "exclude_dirs": ["slop-mop", "cursor-rules", "node_modules", "__mocks__"]
      }
    }
  },
  "security": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "full": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": ".secrets.baseline",
        "scanners": ["bandit", "semgrep", "detect-secrets"],
        "exclude_dirs": [
          "venv",
          ".venv",
          "node_modules",
          "cursor-rules",
          "archives",
          "logs",
          "tests",
          "*/.venv",
          "*/venv"
        ]
      },
      "local": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": ".secrets.baseline",
        "scanners": ["bandit", "semgrep", "detect-secrets"],
        "exclude_dirs": [
          "venv",
          ".venv",
          "node_modules",
          "cursor-rules",
          "archives",
          "logs",
          "tests",
          "*/.venv",
          "*/venv"
        ]
      }
    }
  },
  "quality": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [
      "coverage",
      "ios",
      "android",
      "node_modules",
      ".git",
      "slop-mop",
      "cursor-rules",
      "test_artifacts"
    ],
    "gates": {
      "complexity": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "max_rank": "C",
        "max_complexity": 15,
        "src_dirs": []
      },
      "source-duplication": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "threshold": 5,
        "include_dirs": ["src"],
        "min_tokens": 50,
        "min_lines": 5
      },
      "string-duplication": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "exclude_dirs": ["node_modules", "slop-mop", "cursor-rules", "venv", ".venv"]
      },
      "dead-code": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "exclude_dirs": ["node_modules", "slop-mop", "cursor-rules", "venv", ".venv"]
      },
      "loc-lock": {
        "enabled": true,
        "auto_fix": false,
        "max_file_lines": 2700,
        "max_function_lines": 120,
        "include_dirs": ["src", "scripts"],
        "exclude_dirs": [
          "ios",
          "android",
          "node_modules",
          "coverage",
          ".expo",
          "temp",
          "test_artifacts",
          "quality-reports",
          "reports",
          "slop-mop",
          "cursor-rules",
          "__mocks__",
          "__tests__"
        ]
      },
      "bogus-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "max_allowed": 0,
        "exclude_dirs": ["slop-mop", "cursor-rules", "node_modules"]
      }
    }
  },
  "general": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "templates": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "templates_dir": null
      },
      "deploy-tests": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "test_script": "scripts/__tests__/deploy_app.test.sh"
      }
    }
  },
  "integration": {
    "enabled": false,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "smoke-tests": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null,
        "test_dir": "tests/smoke"
      },
      "integration-tests": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null,
        "test_dir": "tests/integration"
      },
      "e2e-tests": {
        "enabled": false,
        "auto_fix": false,
        "config_file_path": null,
        "test_dir": "tests/e2e",
        "test_command": null
      }
    }
  },
  "pr": {
    "enabled": true,
    "include_dirs": [],
    "exclude_dirs": [],
    "gates": {
      "comments": {
        "enabled": true,
        "auto_fix": false,
        "config_file_path": null,
        "fail_on_unresolved": true
      }
    }
  },
  "disabled_gates": []
}
