{
  "name": "fogofdog",
  "main": "index.ts",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "test:e2e": "detox test --configuration ios.sim.debug",
    "test:e2e:release": "detox test --configuration ios.sim.release",
    "build:e2e:ios": "detox build --configuration ios.sim.debug",
    "build:e2e:ios:release": "detox build --configuration ios.sim.release",
    "lint": "expo lint",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:errors-only": "eslint src --ext .ts,.tsx --quiet",
    "lint:strict": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:transition": "eslint src --ext .ts,.tsx --max-warnings 35",
    "pre-commit": "npm run lint:errors-only && npm run test:ci",
    "pre-commit:strict": "npm run lint:strict && npm run test:ci",
    "prepare": "husky",
    "quality:check": "npm run lint:strict && npm run test:coverage && npm run audit:security",
    "quality:full": "npm run quality:check && npm run type-check-fast",
    "quality:fix": "npm run lint:fix && npm run test:update-snapshots",
    "audit:security": "npm audit --audit-level high",
    "type-check": "npx tsc --noEmit --strict",
    "type-check-fast": "npx tsc --noEmit",
    "test:coverage": "jest --coverage --watchAll=false --passWithNoTests",
    "test:update-snapshots": "jest --updateSnapshot --watchAll=false",
    "bundle:analyze": "npx expo export --platform ios && echo 'Bundle analysis complete'",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm install",
    "ci:quality-gate": "npm run quality:check && npx expo doctor",
    "build:verify": "npx expo export --platform ios && npx expo export --platform android"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/native": "^7.1.10",
    "@react-navigation/native-stack": "^7.3.14",
    "@reduxjs/toolkit": "^2.8.2",
    "@shopify/react-native-skia": "^1.5.0",
    "expo": "~52.0.0",
    "expo-constants": "~17.0.8",
    "expo-font": "~13.0.4",
    "expo-linking": "~7.0.5",
    "expo-location": "~18.0.10",
    "expo-splash-screen": "~0.29.24",
    "expo-status-bar": "~2.0.1",
    "expo-system-ui": "~4.0.9",
    "expo-updates": "~0.27.4",
    "expo-web-browser": "~14.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.9",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-maps": "1.18.0",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-web": "~0.19.13",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@expo/ngrok": "^4.1.3",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "babel-preset-expo": "~12.0.0",
    "detox": "^20.39.0",
    "eslint": "^9.0.0",
    "eslint-config-expo": "^9.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "react-test-renderer": "^18.3.1",
    "typescript": "^5.8.3"
  },
  "private": true
}
